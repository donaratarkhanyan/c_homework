1.parz tvi chapov dynamic memoryum zangvac vercnel y-i depqum  u elementnery lcnel
#include <iostream>

int isPrime(int a){
    for (int i = 2; i <= a / 2; ++i){
        if (a % i == 0){
            return 0;
        }
    }
    return 1;
}

int main()
{
    int x = 2;
    int y = 0;
    char ch; 
    std::cout << "Enter yes or no: ";
    std::cin >> ch;
    while(ch == 'y'){
        for (int i = x; i < 100; ++i){
            ++x;
            if(isPrime(i)){
                std::cout << "i = "<< i << "\n"; 
                y = i;
                break;
            }
        }
        int* ptr = new int[y];

        for (int j = 0; j < y; ++j){
            std::cout << "Enter element: ";
            std::cin >>  ptr[j];
        }
        std::cout << "\nEnter yes or no: ";
        std::cin >> ch;
    }
        std::cout << std::endl;
}

2. grel cragir structov vory mutqagrum e usanoxi anun azganun ID ev gnahatakan u cacr gnahatakanov usanoxi anuny tpum ekranin.
#include <iostream>
#include <cstring>

struct mard{
    std::string anun;
    std::string azganun;
    int id;
    int mark;
};

int main(){
    int member = 0;
    std::cout << "Enter the students member: ";
    std::cin >> member;

    mard* m_arr = new mard [member];
    for(int i = 0; i < member; ++i){
        std::cout << "Anun: ";
        std::cin >> m_arr[i].anun;
        std::cout << "Azganun: ";
        std::cin >> m_arr[i].azganun;
        std::cout << "ID number: ";
        std::cin >> m_arr[i].id;
        std::cout << "Mark: ";
        std::cin >> m_arr[i].mark;
    }
    for(int i = 0; i < m_arr[i].mark; ++i){
            if(m_arr[i].mark < 5){
                std::cout <<"Anun: "<<  m_arr[i].anun
                << "\nAzganun: " << m_arr[i].azganun
                << "\nID number: " << m_arr[i].id;
                std::cout << std::endl;
            }           
    }

}

3. ogtagorcelov bubble sort grel achman kargov zangvaci tarrery
#include <iostream>
int main()
{
        int arr[4] = {2, 34, 8, 1};
        for(int i = 0; i < 4; ++i){
                for(int j = 0; j < 4 - 1 - i; ++j){
                        if(arr[j] > arr[j + 1]){
                                std::swap(arr[j], arr[j + 1]);
                        }
                }
        }
        for(int i = 0; i < 4; ++i){
                std::cout << arr[i] << std::endl;
        }
}
4.selection sort
#include <iostream>

int main()
{
	int n = 4;
	int arr[n] = {7, 45, 5, 3};
	for(int i = 0; i < n; ++i){
	int tmp = i;
		for(int j = i + 1; j < n; ++j){
			if(arr[j] < arr[tmp]){
				tmp = j;
			}
		}
	std::swap(arr[i], arr[tmp]);
	}
	
	for(int i = 0; i < 4; ++i){
		std::cout << arr[i] << " ";
	}

	std::cout << std::endl;

}
5.grel cragir vory kgumari nermucvac tvery aranc + operator ogtagorcelu
#include <iostream>
int main()
{
	int a = 0;
	int b = 0;
	int carry = 0;
	std::cout << "Enter the first number: ";
	std::cin >> a;
	std::cout << "Enter the second number: ";
	std::cin >> b;

	while(b ^= 0){
		carry = a & b;
		a ^= b;
		b = carry << 1;
		}
	std::cout << "sum = " << a;
	return 0;
}

6.grel cragir vor kvoroshi nermucvac tvi nisheri qanaky,,, u nishery ktpi chisht hertakanutyamb
#include <iostream>
int main()
{
    int num = 0;
    std::cout << "The number: ";
    std::cin >> num;
    int tmp = num;
    int division = 1;

    while (tmp >= 10) {
        tmp /= 10;
        division *= 10;
    }
    while(division > 0){
        int nish = num / division;
        std::cout << nish << " ";
        num %= division;
        division /= 10;
    }
    std::cout << std::endl;
}

7.VECTOR grel cragir vor kvoroshi nermucvac tvi nisheri qanaky,,, u nishery ktpi chisht hertakanutyamb
#include <iostream>
#include <vector>
int main()
{
    int n = 5478;
    std::vector<int> nisher;
    while(n){
        nisher.push_back(n % 10);
        n /= 10;
    }
    for(int i = nisher.size() - 1; i >= 0; --i){
        std::cout << nisher[i] << " ";
    }
}

8.function tvi factorial
#include <iostream>

int fact(int val){
    int ret = 1;
    while(val > 1){
        ret *= val--;
    }
    return ret;
}

int main()
{
    int j = fact(7); // j equals 120, i.e., the result of fact(5)
    std::cout << "7! is " << j << std::endl; 

    return 0;
}

9.factorial recursive
#include <iostream>

int factorial(int num){
    if(num == 1){
        return 1;
    }
    return factorial(num - 1) * num;
}
int main()
{
    int n;
    std::cout << "enter the number: ";
    std::cin >> n;
    std::cout << "Factorial of " << n << " is " << factorial(n) << std::endl;
    return 0;
}

10. factorial program
#include <iostream>

int main()
{
    int ar_size = 0;
    std::cout << "Enter the number: ";
    std::cin >> ar_size;
    long factorials[ar_size];
    factorials[1] = 1l;
    for(int i = 2; i < ar_size; ++i){
        factorials[i] = i * factorials[i -1];
    }
    for(int i = 1; i < ar_size; ++i){
        std::cout << i << "! = " << factorials[i] << std::endl;
    }
    return 0;
}
