#include <iostream>
int main(){
	int num1 = 0;
	int num2 = 0;
	int sum = 0;
	
	std::cout<< "please enter the first number: " << std::endl;
	std::cin>> num1;
	std::cout<< "please enter the second number: " << std::endl;
        std::cin>> num2;
	
	sum = num1 + num2;
	
	std::cout<< "num1 + num2 =" << sum << std::endl;
	return 0;
}
4)
#include <iostream>
int main()
{
	//std::cout<< "Hello World!" << std::endl;
	//return 0;
	int a = 0;
	char ch = 0;
	double d = 0;
	float f = 0;
	
	std::cout<< "Please enter the integer: ";
	std::cin>> a;
	std::cout<< "Please enter the character: ";
        std::cin>> ch;
	std::cout<< "Please enter the double: ";
        std::cin>> d;
	std::cout<< "Please enter the float: ";
        std::cin>> f;
	std::cout << "a =" << a << std::endl;
	std::cout << "ch =" << ch << std::endl;
	std::cout << "d =" << d << std::endl;
	std::cout << "f =" << f << std::endl;
	return 0;
}
5)
#include <iostream>
using namespace std;
int main()
{
    int arr[4] = {3, 4, 74, 34};
     for(int i = 0; i < 4; i++){
         cout << ” ”  << arr[i];
     }
    int max = arr[0];
    for(int i = 0; i < 4; ++i){
        if(max < arr[i])
        max = arr[i];
    }
    cout<< endl << “max = ” << max;
    return 0;
}
6)
#include<iostream>
int main ()
{
  const int size = 4;
  char arr[size];
  for(int i = 0; i < size; i++){
  do
    {
      std::cout << "Enter upper letter:";
      std::cin >> arr[i];
    }while(arr[i] < 'A' || arr[i] > 'Z');
  }
  std::cout << arr;
  return 0;
}
7)
#include <iostream>
int main() {
	int x = 100;
	for(int i = 0; i <= x; ++i){
	   
	   if (i % 3 == 0  && i % 5 == 0) {
		std::cout << "FizzBuzz" << std::endl;
	   } else if(i % 5 == 0) {
		std::cout << "Buzz" << std::endl;
           } else if (i % 3 == 0) {
		std::cout << "Fizz" << std::endl;
	   } else {
		std::cout << i << std::endl;
	   }
		
		
	}


}
8)
#include <iostream>

int main() {
	int x = 100;
	for(int i = 0; i <= x; ++i){

	   if (i % 3 == 0  && i % 5 == 0) {
		std::cout << "FizzBuzz" << std::endl;
	   } else if(i % 5 == 0) {
		std::cout << "Buzz" << std::endl;
           } else if (i % 3 == 0) {
		std::cout << "Fizz" << std::endl;
	   } else {
		std::cout << i << std::endl;
	   }

	}
}
9)
#include <iostream>

int main() {
	int a = 0;
	int b = 0;
	std::cout << "Enter the a = ";
	std::cin >> a;
	std::cout << "Enter the b = ";
        std::cin >> b;
	
	int temp = a;
	a = b;
	b = temp;
	
	std::cout << "a = " << a << std::endl;
	std::cout << "b = " << b << std::endl;
}
